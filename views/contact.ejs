<div class="row">
    <div class="col-md-8">
        <br />
        <h2>CONTACT PAGE</h2>

        <div class="text-end">
            <a href="/contact/add" class="btn btn-secondary"
                style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; margin-right: 10%;">Add
                Contact</a>
        </div>
        <br />
        <table class="table">
            <thead>

                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Action</th>
                </tr>

            </thead>
            <tbody>

                <%# Yang akan terjadi apabila datanya kosong %>
                    <% if (contacts.length===0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">DATA ARE NOT EXIST YET!</div>
                            </td>
                        </tr>
                        <% } %>

                            <%# Penomoran secara otomatis %>
                                <% let no=1; %>

                                    <%# Looping %>
                                        <% contacts.forEach(contact=> { %>

                                            <tr>
                                                <th scope="row">
                                                    <%= no++ %>
                                                </th>
                                                <td>
                                                    <%= contact.nama %>
                                                </td>
                                                <td>
                                                    <%= contact.mobile %>
                                                </td>
                                                <td>
                                                    <a href="/contact/<%= contact.nama %>"
                                                        class="btn btn-success badge rounded-pill">detail</a>
                                                </td>
                                            </tr>

                                            <% }) %>

            </tbody>
        </table>
    </div>
</div>